{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "prevent-main-commit",
      "group": "pre-commit",
      "branch": "main",
      "command": "bash",
      "args": [ "-c", "echo 'Direct commits to main are not allowed.' && exit 1" ],
      "windows": {
        "command": "cmd.exe",
        "args": [ "/c", "echo Direct commits to main are not allowed. && exit 1" ]
      }
    },
    {
      "name": "dotnet-format-whitespace",
      "group": "pre-commit",
      "command": "dotnet",
      "args": [ "format", "whitespace", "--include", "${staged}" ],
      "include": [ "**/*.cs" ]
    },
    {
      "name": "dotnet-format-style",
      "group": "pre-commit",
      "command": "dotnet",
      "args": [ "format", "style", "--include", "${staged}" ],
      "include": [ "**/*.cs" ]
    }
  ]
}
