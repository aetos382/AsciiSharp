{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "husky setup",
      "dependsOn": [ "restore tools" ],
      "type": "process",
      "command": "dotnet",
      "args": [ "husky", "install" ],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "presentation": {
        "close": true,
        "showReuseMessage": false
      }
    },
    {
      "label": "restore tools",
      "type": "process",
      "command": "dotnet",
      "args": [ "tool", "restore" ],
      "presentation": {
        "showReuseMessage": false
      }
    },
    {
      "label": "build",
      "type": "process",
      "command": "dotnet",
      "args": [ "build" ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "test",
      "type": "process",
      "command": "dotnet",
      "args": [ "test" ],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "build tck",
      "type": "process",
      "command": "docker",
      "args": [ "buildx", "bake", "tck" ],
      "dependsOn": [
        "pull tck"
      ],
      "group": "build"
    },
    {
      "label": "run tck",
      "type": "process",
      "command": "docker",
      "args": [ "container", "run", "-it", "--rm", "asciisharp-tck:latest" ],
      "dependsOn": [
        "build tck"
      ],
      "group": "test"
    },
    {
      "label": "pull tck",
      "type": "process",
      "command": "git",
      "args": [ "submodule", "update", "--init", "submodules/asciidoc-tck" ]
    }
  ]
}
