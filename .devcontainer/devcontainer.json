{
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "overrideCommand": true,
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "init": true,
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "installDockerComposeSwitch": false
    },
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "10.0.103"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/powershell:2": {},
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": false,
      "optimize": true
    },
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
    "ghcr.io/va-h/devcontainers-features/uv:1": {}
  },
  "overrideFeatureInstallOrder": [
    "ghcr.io/devcontainers/features/python"
  ],
  "remoteUser": "vscode",
  "containerEnv": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "CLAUDE_CONFIG_DIR": "/home/vscode/.claude",
    "DISABLE_AUTOUPDATER": "1",
    "LANG": "ja_JP.UTF-8",
    "NUGET_PACKAGES": "/home/vscode/.nuget/packages",
    "NUGET_XMLDOC_MODE": "none",
    "TZ": "Asia/Tokyo"
  },
  "remoteEnv": {
    "DOCKER_API_VERSION": "1.43",
    "PATH": "/home/vscode/.local/bin:/home/vscode/.local/node/bin:/home/vscode/.dotnet/tools:${containerEnv:PATH}"
  },
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "postStartCommand": "bash .devcontainer/postStart.sh",
  "mounts": [
    {
      "type": "volume",
      "source": "claude-code-config-${devcontainerId}",
      "target": "/home/vscode/.claude"
    },
    {
      "type": "volume",
      "source": "nuget-package-cache-${devcontainerId}",
      "target": "/home/vscode/.nuget/packages"
    }
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "Anthropic.claude-code",
        "asciidoctor.asciidoctor-vscode",
        "docker.docker",
        "eamodio.gitlens",
        "EditorConfig.EditorConfig",
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "ms-dotnettools.csdevkit",
        "-ms-python.python",
        "-ms-python.vscode-pylance",
        "-ms-python.autopep8"
      ],
      "settings": {
        "asciidoc.extensions.enableKroki": true,
        "asciidoc.preview.asciidoctorAttributes": {
          "kroki-server-url": "http://localhost:8000"
        }
      }
    }
  }
}
