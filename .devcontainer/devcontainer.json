{
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "overrideCommand": true,
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers-extra/features/claude-code:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": false,
      "optimize": true
    },
    "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {}
  },
  "overrideFeatureInstallOrder": [
    "ghcr.io/devcontainers/features/node",
    "ghcr.io/devcontainers/features/python"
  ],
  "remoteUser": "vscode",
  "containerEnv": {
    "TZ": "Asia/Tokyo",
    "CLAUDE_CONFIG_DIR": "/home/vscode/.claude"
  },
  "postCreateCommand": ".devcontainer/postCreate.sh",
  "postStartCommand": ".devcontainer/postStart.sh",
  "mounts": [
    {
      "type": "volume",
      "source": "claude-code-bashhistory-${devcontainerId}",
      "target": "/commandhistory"
    },
    {
      "type": "volume",
      "source": "claude-code-config-${devcontainerId}",
      "target": "/home/vscode/.claude"
    },
    {
      "type": "bind",
      "source": "${localEnv:USERPROFILE}/.claude/CLAUDE.md",
      "target": "/home/vscode/.claude/CLAUDE.md"
    }
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "Anthropic.claude-code",
        "asciidoctor.asciidoctor-vscode",
        "eamodio.gitlens",
        "EditorConfig.EditorConfig",
        "GitHub.copilot-chat",
        "ms-dotnettools.csdevkit",
        "shuworks.vscode-table-formatter",
        "-dbaeumer.vscode-eslint",
        "-ms-python.python",
        "-ms-python.vscode-pylance",
        "-ms-python.autopep8"
      ],
      "settings": {
        "chat.promptFilesRecommendations": {
          "speckit.constitution": true,
          "speckit.specify": true,
          "speckit.plan": true,
          "speckit.tasks": true,
          "speckit.implement": true
        },
        "chat.tools.terminal.autoApprove": {
          ".specify/scripts/bash/": true,
          ".specify/scripts/powershell/": true
        },
        "asciidoc.extensions.enableKroki": true,
        "asciidoc.preview.asciidoctorAttributes": {
          "kroki-server-url": "http://localhost:8000"
        }
      }
    }
  }
}
