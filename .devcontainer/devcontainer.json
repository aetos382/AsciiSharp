{
  "build": {
    "dockerfile": "Dockerfile",
    "context": "."
  },
  "features": {
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "10.0.100-rc.2.25502.107"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/powershell:1": {
      "modules": "Microsoft.PowerShell.PSResourceGet"
    },
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers-extra/features/npm-packages:1": {
      "packages": "@anthropic-ai/claude-code"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": false
    },
    "ghcr.io/jsburckhardt/devcontainer-features/uv:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "overrideFeatureInstallOrder": [
    "ghcr.io/devcontainers/features/node",
    "ghcr.io/devcontainers/features/python"
  ],
  "remoteUser": "vscode",
  "containerEnv": {
    "TZ": "Asia/Tokyo",
    "CLAUDE_CONFIG_DIR": "/home/vscode/.claude"
  },
  "postCreateCommand": ".devcontainer/postCreate.sh",
  "mounts": [
    {
      "type": "volume",
      "source": "claude-code-bashhistory-${devcontainerId}",
      "target": "/commandhistory"
    },
    {
      "type": "volume",
      "source": "claude-code-config-${devcontainerId}",
      "target": "/home/vscode/.claude"
    },
    {
      "type": "bind",
      "source": "${localEnv:USERPROFILE}/.claude/CLAUDE.md",
      "target": "/home/vscode/.claude/CLAUDE.md"
    }
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "Anthropic.claude-code",
        "EditorConfig.EditorConfig",
        "GitHub.codespaces",
        "GitHub.copilot-chat",
        "eamodio.gitlens",
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.vscodeintellicode-csharp",
        "asciidoctor.asciidoctor-vscode",
        "-dbaeumer.vscode-eslint",
        "-ms-python.python",
        "-ms-python.vscode-pylance",
        "-ms-python.autopep8"
      ]
    }
  }
}
