{
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "overrideCommand": true,
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "init": true,
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "installDockerComposeSwitch": false
    },
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "10.0.102"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/powershell:1": {},
    "ghcr.io/devcontainers/features/python:1": {
      "installTools": false,
      "optimize": true
    },
    "ghcr.io/devcontainers-extra/features/npm-packages:1": {
      "packages": "npm,@github/copilot,@openai/codex,@anthropic-ai/claude-code,@google/gemini-cli"
    },
    "ghcr.io/stuartleeks/dev-container-features/shell-history:0": {},
    "ghcr.io/va-h/devcontainers-features/uv:1": {}
  },
  "overrideFeatureInstallOrder": [
    "ghcr.io/devcontainers/features/node",
    "ghcr.io/devcontainers/features/python"
  ],
  "remoteUser": "vscode",
  "containerEnv": {
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1",
    "CLAUDE_CONFIG_DIR": "/home/vscode/.claude",
    "DISABLE_AUTOUPDATER": "1",
    "LANG": "ja_JP.UTF-8",
    "NUGET_PACKAGES": "/home/vscode/.nuget/packages",
    "NUGET_XMLDOC_MODE": "none",
    "TZ": "Asia/Tokyo"
  },
  "remoteEnv": {
    "DOCKER_API_VERSION": "1.43",
    "PATH": "/home/vscode/.local/bin:/home/vscode/.dotnet/tools:${containerEnv:PATH}"
  },
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "postStartCommand": "bash .devcontainer/postStart.sh",
  "mounts": [
    {
      "type": "volume",
      "source": "copilot-config-${devcontainerId}",
      "target": "/home/vscode/.copilot"
    },
    {
      "type": "volume",
      "source": "codex-config-${devcontainerId}",
      "target": "/home/vscode/.codex"
    },
    {
      "type": "volume",
      "source": "claude-code-config-${devcontainerId}",
      "target": "/home/vscode/.claude"
    },
    {
      "type": "volume",
      "source": "gemini-config-${devcontainerId}",
      "target": "/home/vscode/.gemini"
    },
    {
      "type": "volume",
      "source": "nuget-package-cache-${devcontainerId}",
      "target": "/home/vscode/.nuget/packages"
    }
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "Anthropic.claude-code",
        "asciidoctor.asciidoctor-vscode",
        "CucumberOpen.cucumber-official",
        "docker.docker",
        "eamodio.gitlens",
        "EditorConfig.EditorConfig",
        "GitHub.copilot-chat",
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "Google.gemini-cli-vscode-ide-companion",
        "Google.geminicodeassist",
        "ms-dotnettools.csdevkit",
        "openai.chatgpt",
        "-dbaeumer.vscode-eslint",
        "-ms-python.python",
        "-ms-python.vscode-pylance",
        "-ms-python.autopep8"
      ],
      "settings": {
        "asciidoc.extensions.enableKroki": true,
        "asciidoc.preview.asciidoctorAttributes": {
          "kroki-server-url": "http://localhost:8000"
        },
        "chat.promptFilesRecommendations": {
          "speckit.constitution": true,
          "speckit.specify": true,
          "speckit.plan": true,
          "speckit.tasks": true,
          "speckit.implement": true
        },
        "chat.tools.terminal.autoApprove": {
          ".specify/scripts/bash/": true,
          ".specify/scripts/powershell/": true
        },
        "http.systemCertificatesNode": true
      }
    }
  }
}
